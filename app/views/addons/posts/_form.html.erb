<div id="addons_post" class="form">
<%= simple_form_for(@post, 
  :url => (@post.id.blank? ? addons_posts_path : addons_post_path(@post)) ) do |f| %>

  <div class="inputs">
  <%= f.input :title %>
  </div>
  <div class="actions">
    <%= f.submit "提交", :class => "button" %> 或者 <%= link_to '返回', addons_posts_path %>
  </div>
<% end %>
</div>